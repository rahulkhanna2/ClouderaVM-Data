sqoop list-database \
	--connect jdbc:mysql://quickstart.cloudera \
	--username root \
	--password cloudera

sqoop list-tables \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera

sqoop eval \
--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	-query "SELECT * FROM orders LIMIT 10"

sqoop eval \
--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	-query "INSERT INTO orders VALUES (1000000, '2017-10-31 00:00:00', 12365, 'DUMMY' )"

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table order_items \
	--warehouse-dir /user/cloudera/sqoop_import/retail_db
	--num-mappers 1


sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table order_items_nopk \
	--warehouse-dir /user/cloudera/sqoop_import/retail_db
	--split-by order_item_id
	--append

//spliting by non numeric text

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username retail_dba \
	--password cloudera \
	--table orders \
	--warehouse-dir /user/cloudera/sqoop_import/retail_db
	--split-by order_status 


//changing file format of output data
sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table order_items \
	--warehouse-dir /user/cloudera/sqoop_import/retail_db \
	--num-mappers 2 \
	--as-textfile

//Compress data 

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table order_items \
	--warehouse-dir /user/cloudera/sqoop_import/retail_db \
	--num-mappers 2 \
	--as-textfile \
	--delete-target-dir \
	--compress

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table order_items \
	--warehouse-dir /user/cloudera/sqoop_import/retail_db \
	--num-mappers 2 \
	--as-textfile \
	--delete-target-dir \
	--compress
	--compress-codec org.apache.hadoop.io.compress.SnappyCodec


\\Incremental imports

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--target-dir /user/cloudera/sqoop_import/retail_db/orders \
	--num-mappers 2 \
	--query "select * from orders where \$CONDITIONS and order_date like '2013-%'" \
	--split-by order_id \
	--delete-target-dir

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--target-dir /user/cloudera/sqoop_import/retail_db/orders \
	--delete-target-dir \
	--num-mappers 2 \
	--table orders \
	--where "order_date like '2014-01%'"
	--append


sqoop import-all-tables \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--warehouse-dir /user/cloudera/sqoop_import/retail_db \
	--autoreset-to-one-mapper



\\HIVE IMPORT

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table order_items \
	--hive-import \
	--hive-database rahul_sqoop_import \
	--hive-table order_items \
	--num-mappers 2

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table orders \
	--hive-import \
	--hive-database rahul_sqoop_import \
	--hive-table orders \
	--num-mappers 2


\\HIVE OVERWRITE (By default hive just appends the data to the previous data)

sqoop import \
	--connect jdbc:mysql://quickstart.cloudera/retail_db \
	--username root \
	--password cloudera \
	--table order_items \
	--hive-import \
	--hive-database rahul_sqoop_import \
	--hive-table order_items \
	--hive-overwrite \
	--num-mappers 2

//create a hive table

create table daily_revenue as select order_date, sum(order_item_subtotal) daily_revenue from orders join order_items on order_id = order_item_order_id where order_date like '2013-07%' group by order_date;

\\sqoop-export

sqoop export \
	--connect jdbc:mysql://quickstart.cloudera/retail_export \
	--username root \
	--password cloudera \
	--export-dir /user/hive/warehouse/rahul_sqoop_import.db/daily_revenue \
	--input-fields-terminated-by '\001' \
	--table daily_revenue

\\columns to export:- columns clause is the columns of the demo database where data is to be exported

create table daily_revenue_demo ( revenue float, order_date varchar(30), description varchar(300));

sqoop export \
	--connect jdbc:mysql://quickstart.cloudera/retail_export \
	--username root \
	--password cloudera \
	--export-dir /user/hive/warehouse/rahul_sqoop_import.db/daily_revenue \
	--input-fields-terminated-by '\001' \
	--columns order_date, revenue \
	--table daily_revenue_demo \
	--num-mappers 1


HIVE:- insert into table daily_revenue select order_date, sum(order_item_subtotal) daily_revenue from orders join order_items on order_id = order_item_order_id where order_date like '2013-08%' group by order_date;

sqoop export \
	--connect jdbc:mysql://quickstart.cloudera/retail_export \
	--username root \
	--password cloudera \
	--export-dir /user/hive/warehouse/rahul_sqoop_import.db/daily_revenue \
	--input-fields-terminated-by '\001' \
	--update-key order_date \
	--table daily_revenue

sqoop export \
	--connect jdbc:mysql://quickstart.cloudera/retail_export \
	--username root \
	--password cloudera \
	--export-dir /user/hive/warehouse/rahul_sqoop_import.db/daily_revenue \
	--input-fields-terminated-by '\001' \
	--update-key order_date \
	--update-mode allowinsert \	
	--table daily_revenue
